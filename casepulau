local player = game.Players.LocalPlayer
local openAnimation = player.PlayerGui:WaitForChild("OpenAnimation")
local runService = game:GetService("RunService")

print("Menjalankan V5: ZIndex Destroyer...")

-- Fungsi untuk menyiksa UI agar tidak terlihat
local function destroyVisuals(obj)
    if obj:IsA("GuiObject") then
        obj.Visible = false
        obj.Transparency = 1
        obj.BackgroundTransparency = 1
        if obj:IsA("TextLabel") or obj:IsA("TextButton") then
            obj.TextTransparency = 1
        elseif obj:IsA("ImageLabel") or obj:IsA("ImageButton") then
            obj.ImageTransparency = 1
        end
    elseif obj:IsA("ScreenGui") then
        obj.Enabled = false
        obj.DisplayOrder = -999 -- Pindah ke urutan paling belakang (di balik map)
    end
end

-- Looping agresif agar script game-nya tidak bisa menyalakan lagi
runService.RenderStepped:Connect(function()
    for _, v in pairs(openAnimation:GetDescendants()) do
        destroyVisuals(v)
    end
    
    -- Mencoba mematikan ScreenGui utamanya juga
    if openAnimation:FindFirstChild("CaseOpeningScreen") then
        openAnimation.CaseOpeningScreen.Enabled = false
        openAnimation.CaseOpeningScreen.DisplayOrder = -999
    end
    
    if openAnimation:FindFirstChild("EndPreview") then
        openAnimation.EndPreview.Enabled = false
        openAnimation.EndPreview.DisplayOrder = -999
    end
end)

-- Hancurkan Sound yang menyebalkan
for _, s in pairs(game:GetService("SoundService"):GetDescendants()) do
    if s.Name:lower():find("open") or s.Name:lower():find("unbox") then
        s.Volume = 0
    end
end

print("Done! Harusnya layar sekarang bersih meskipun unbox jalan.")
