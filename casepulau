local player = game.Players.LocalPlayer
local openAnim = player.PlayerGui:WaitForChild("OpenAnimation")

print("Menjalankan Metode Hardcore Skip...")

game:GetService("RunService").RenderStepped:Connect(function()
    -- 1. Paksa matikan ScreenGui-nya
    local opening = openAnim:FindFirstChild("CaseOpeningScreen")
    local preview = openAnim:FindFirstChild("EndPreview")
    
    if opening then 
        opening.Enabled = false 
        -- 2. Bikin semua gambar/tulisan di dalamnya jadi transparan total
        for _, v in pairs(opening:GetDescendants()) do
            if v:IsA("GuiObject") then v.Visible = false end
        end
    end
    
    if preview then 
        preview.Enabled = false 
        for _, v in pairs(preview:GetDescendants()) do
            if v:IsA("GuiObject") then v.Visible = false end
        end
    end
end)

-- 3. Hapus suara unbox agar tidak berisik saat spam
for _, s in pairs(game:GetService("SoundService"):GetDescendants()) do
    if s:IsA("Sound") and s.Name:lower():find("open") then
        s:Destroy()
    end
end

print("Metode Hardcore Aktif. Coba buka case sekarang!")
